namespace kneaf.mob;

table MobData {
  id:ulong;
  entity_type:string;
  distance:float;
  is_passive:bool;
}

table MobInput {
  tick_count:ulong;
  mobs:[MobData];
}

table MobProcessResult {
  mobs_to_disable_ai:[ulong];
  mobs_to_simplify_ai:[ulong];
}

table AiConfig {
  passive_disable_distance:float;
  hostile_simplify_distance:float;
  ai_tick_rate_far:float;
}

root_type MobInput;